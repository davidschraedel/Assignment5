@page

@model OnlineBookstore.Pages.BuyModel

@{
}
<div class="container bg-dark rounded shadow">
    <br />
    <div class=" align-content-center">
        <h2 class="text-white display-4 shadow p-3 mb-5 col-3 mx-auto text-center rounded-pill d-block border-bottom border-right border-secondary">Your Cart</h2>
    </div>
    <br />

    <table class="table table-bordered bg-light shadow p-4">
        <thead>
            <tr>
                <th>Project</th>
                <th>Quantity</th>
                <th class="text-right">Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>


        <tbody>
            @foreach (var line in Model.Cart.Lines)
            {
            <tr>
                <td class="text-left">@line.Book.Title</td>
                <td class="text-center">@line.Quantity</td>
                <td class="text-right">@line.Book.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Book.Price).ToString("c"))</td>
                <td class="text-center">
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="BookId"
                               value="@line.Book.BookId" />
                        <input type="hidden" name="returnUrl"
                               value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
            }
        </tbody>

        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total:</td>
                <td class="text-right">@Model.Cart.ComputeTotalSum().ToString("c")</td>
            </tr>
        </tfoot>
    </table>
    <div class="text-center p-2">
        <a class="btn btn-outline-primary btn-lg text-white shadow" href="@Model.ReturnUrl">Continue Shopping</a>
    </div>
    <br />
</div>
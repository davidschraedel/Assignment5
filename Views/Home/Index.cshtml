@{
    ViewData["Title"] = "Home Page";
}

@model  BookListViewModel

<div class="text-center">     
    
    <div>
        <!--table for book summaries-->
        <table class="table table-bordered bg-light shadow">
            <caption class="table table-bordered bg-light align-content-center">
                <!--book pagination navigation-->
                <div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn" page-class-normal="btn-outline-dark"
                     page-class-selected="btn-dark" page-url-category="@Model.CurrentCategory" class="btn-group pull-right m-1 col-4 align-content-center "></div>
            </caption>
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Classification/Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Page Count</th>
                    <th scope="col">ISBN</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <!-- display each book in the database, each on a separate row.-->
                @foreach (var x in Model.Books)
                {
                    <partial name="BookSummary" model="x" />
                }
            </tbody>
        </table>
    </div>
</div>
